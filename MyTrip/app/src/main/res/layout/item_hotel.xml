<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hotelImageView"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hotelNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/hotelPriceTextView"
        app:layout_constraintStart_toEndOf="@id/hotelImageView"
        app:layout_constraintTop_toTopOf="@id/hotelImageView"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="호텔이름" />

    <TextView
        android:id="@+id/hotelPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/hotelImageView"
        app:layout_constraintStart_toStartOf="@id/hotelNameTextView"
        app:layout_constraintTop_toBottomOf="@id/hotelNameTextView"
        tools:text="호텔 가격" />

    <TextView
        android:id="@+id/hotelPlaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/hotelImageView"
        app:layout_constraintTop_toBottomOf="@id/hotelImageView"
        tools:text="호텔위치" />

</androidx.constraintlayout.widget.ConstraintLayout>