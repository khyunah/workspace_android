<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <!--  아이콘 사이즈 조정해야함  -->
    <!--  app:titleTextAppearance="@style/my_menu_text_size" : 툴바 텍스트 사이즈, 스타일 변경 파일 만들어야함-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/top_menu"
        app:title="나의 당근"
        app:titleTextAppearance="@style/style_menu_textsize" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@id/secondCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageSellList"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/image_sell_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageBuyList"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="판매내역"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/imageSellList"
                app:layout_constraintStart_toStartOf="@id/imageSellList"
                app:layout_constraintTop_toBottomOf="@id/imageSellList" />

            <ImageView
                android:id="@+id/imageBuyList"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/image_buy_list"
                app:layout_constraintEnd_toStartOf="@id/imageFavorite"
                app:layout_constraintStart_toEndOf="@id/imageSellList"
                app:layout_constraintTop_toTopOf="@id/imageSellList" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="구매내역"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/imageBuyList"
                app:layout_constraintStart_toStartOf="@id/imageBuyList"
                app:layout_constraintTop_toBottomOf="@id/imageBuyList" />

            <ImageView
                android:id="@+id/imageFavorite"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/image_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageBuyList"
                app:layout_constraintTop_toTopOf="@id/imageSellList" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="관심목록"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/imageFavorite"
                app:layout_constraintStart_toStartOf="@id/imageFavorite"
                app:layout_constraintTop_toBottomOf="@id/imageFavorite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/thirdCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstCardView">

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconSize="16dp"
            app:itemTextColor="@color/black"
            app:menu="@menu/second_cardview_menu" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/thirdCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondCardView">

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconSize="16dp"
            app:itemTextColor="@color/black"
            app:menu="@menu/third_cardview_menu" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fourthCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdCardView">

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconSize="20dp"
            app:itemTextColor="@color/black"
            app:menu="@menu/fourth_cardview_menu" />

    </androidx.cardview.widget.CardView>

    <!--  app:labelVisibilityMode="labeled" 라벨을 항상 노출
            itemRippleColor : 눌럿을때 번지는 효과의 색상
            app:itemTextColor="@color/menu_colors" : 메뉴는 drawable 속성 안먹음 color 로 만들어서 적용하기-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:itemBackground="@color/white"
        app:itemIconSize="17dp"
        app:itemIconTint="@color/menu_colors"
        app:itemTextColor="@color/menu_colors"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>