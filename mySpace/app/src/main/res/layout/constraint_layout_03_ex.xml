<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#245C26"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="Raze Galactic"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/space_station_icon"
            app:layout_constraintEnd_toStartOf="@id/icon2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/icon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rocket_icon"
            app:layout_constraintEnd_toStartOf="@id/icon3"
            app:layout_constraintStart_toEndOf="@id/icon1"
            app:layout_constraintTop_toTopOf="@id/icon1" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rover_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon2"
            app:layout_constraintTop_toTopOf="@id/icon1" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Space Stations"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/icon1"
            app:layout_constraintStart_toStartOf="@id/icon1"
            app:layout_constraintTop_toBottomOf="@id/icon1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Filghts"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/icon2"
            app:layout_constraintStart_toStartOf="@id/icon2"
            app:layout_constraintTop_toBottomOf="@id/icon2" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rovers"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/icon3"
            app:layout_constraintStart_toStartOf="@id/icon3"
            app:layout_constraintTop_toBottomOf="@id/icon3" />

        <TextView
            android:id="@+id/text_dca"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginRight="30dp"
            android:background="#245C26"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="DCA"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/text_mars"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <TextView
            android:id="@+id/text_mars"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#245C26"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="MARS"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_dca"
            app:layout_constraintTop_toTopOf="@id/text_dca" />

        <ImageView
            android:id="@+id/icon_double_arrows"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/double_arrows"
            app:layout_constraintBottom_toBottomOf="@id/text_dca"
            app:layout_constraintEnd_toStartOf="@id/text_mars"
            app:layout_constraintStart_toEndOf="@id/text_dca"
            app:layout_constraintTop_toTopOf="@id/text_dca" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="165dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="#DA4E22"
            android:paddingLeft="8dp"
            android:text="One Way"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_dca" />

        <TextView
            android:id="@+id/text_traveller"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="#DA4E22"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:text="1 Traveller"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/switch1"
            app:layout_constraintTop_toBottomOf="@id/switch1" />

        <ImageView
            android:id="@+id/icon_galaxy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_depart"
            app:layout_constraintTop_toBottomOf="@id/text_traveller"
            android:src="@drawable/galaxy"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <Button
            android:id="@+id/btn_depart"
            android:text="DEPART"
            android:textColor="@color/white"
            android:backgroundTint="#245C26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/text_traveller"
            app:layout_constraintBottom_toTopOf="@id/btn_depart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            app:layout_constraintEnd_toStartOf="@id/icon_galaxy"
            android:src="@drawable/rocket_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>