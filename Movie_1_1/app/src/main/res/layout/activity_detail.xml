<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detailMovieBackgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailMovieImageView"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="@id/detailMovieBackgroundImageView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/detailMovieTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailMovieTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="#A4000000"
        android:padding="4dp"
        android:text="영화제목"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detailMovieImageView"
        app:layout_constraintTop_toTopOf="@id/detailMovieImageView" />

    <TextView
        android:id="@+id/detailMovieYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#A4000000"
        android:padding="3dp"
        android:text="개봉년도"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/detailMovieRuntimeTextview"
        app:layout_constraintStart_toStartOf="@id/detailMovieTitleTextView" />


    <TextView
        android:id="@+id/detailMovieRuntimeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A4000000"
        android:padding="3dp"
        android:text="영화시간"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/detailMovieImageView"
        app:layout_constraintStart_toStartOf="@id/detailMovieTitleTextView" />

    <TextView
        android:id="@+id/detailMovieSynopsisTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:text="줄거리"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/detailMovieImageView"
        app:layout_constraintTop_toBottomOf="@id/detailMovieImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>